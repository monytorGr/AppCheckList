<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppCheckList1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
    xmlns:pages="clr-namespace:AppCheckList1.Pages"
    Title="AppCheckList">

    
    <ShellContent
        Title="Dashboard"
        Icon="{StaticResource IconDashboard}"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="main" />

    <ShellContent
        Title="Projects"
        Icon="{StaticResource IconProjects}"
        ContentTemplate="{DataTemplate pages:ProjectListPage}"
        Route="projects" />


    <ShellContent
        Title="Manage Meta"
        Icon="{StaticResource IconMeta}"
        ContentTemplate="{DataTemplate pages:ManageMetaPage}"
        Route="manage" />
    
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="login"
        IsVisible="False" />


    <Shell.FlyoutFooter>
        <Grid
            Padding="15"
            ColumnDefinitions="Auto,*">

            <sf:SfSegmentedControl
                Grid.Column="0"
                x:Name="ThemeSegmentedControl"
                VerticalOptions="Center"
                SelectionChanged="SfSegmentedControl_SelectionChanged"
                SegmentWidth="30"
                SegmentHeight="30">

                <sf:SfSegmentedControl.ItemsSource>
                    <x:Array Type="{x:Type sf:SfSegmentItem}">
                        <sf:SfSegmentItem
                            ImageSource="{StaticResource IconLight}"
                            SemanticProperties.Description="Light mode" />
                        <sf:SfSegmentItem
                            ImageSource="{StaticResource IconDark}"
                            SemanticProperties.Description="Dark mode" />
                    </x:Array>
                </sf:SfSegmentedControl.ItemsSource>

            </sf:SfSegmentedControl>

            
            <Button
                Grid.Column="1"
                Text="Sair âš™"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Clicked="OnLoginFooterClicked" 
                BackgroundColor="RoyalBlue"/>
            

        </Grid>
    </Shell.FlyoutFooter>

</Shell>
